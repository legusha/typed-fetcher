{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["ESNext", "dom"],
    "module": "commonjs",
    "rootDir": "./src",
    "moduleResolution": "node10",
    "baseUrl": "./",
    "declaration": true,
    "declarationDir": "dist/types",
    "sourceMap": true,
    "outDir": "./dist/",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "noUnusedParameters": true,
  },
  "include": ["src"]
}

